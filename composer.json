{
    "name": "pokedb/pokeapi-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Pascal Kleindienst",
            "email": "mail@pascalkleindienst.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "PokeDB\\PokeApiClient\\": "src/",
            "PokeDB\\PokeApiClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2.0",
        "ext-curl": "*",
        "psr/cache": "^2.0.0",
        "cache/filesystem-adapter": "^1.2"
    },
    "scripts": {
        "test": "phpunit --coverage-text",
        "phpcs": [
            "phpcs --standard=phpcs.xml.dist -s"
        ],
        "phpstan": [
            "phpstan analyze --memory-limit=2G"
        ],
        "psalm": "psalm --config=psalm.xml --threads=4",
        "static-analyze": [
            "@phpstan",
            "@psalm"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.15",
        "squizlabs/php_codesniffer": "^3.7",
        "dg/bypass-finals": "^1.5"
    }
}
